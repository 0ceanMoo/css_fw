    pre._code
      .
        /* ul._virticaled_に直接styleあてると、他にも影響するので「my」で影響範囲を絞ってる */
        ul.my._virticaled_ > li {
          background: #ccF;
          width: 100px;
          height: 60px;
          line-height: 60px;
          text-align: center;
        }
